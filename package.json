{
  "name": "osm402",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "OSM402 - Fund with x402. Merge with Proof. Pay by Mandate.",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "node scripts/dev.mjs",
    "dev:server": "pnpm --filter @osm402/server dev",
    "test": "pnpm -r test",
    "demo:ap2-failure": "bash scripts/ap2-failure-mode.sh",
    "demo:check-github-app": "node scripts/check-github-app-installation.mjs",
    "demo:gemini-check": "node scripts/gemini-demo-check.mjs",
    "evidence:collect": "bash scripts/evidence-pack.sh",
    "lint": "eslint 'apps/**/src/**/*.ts' 'packages/**/src/**/*.ts' --no-error-on-unmatched-pattern",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit -p tsconfig.base.json",
    "contracts:test": "pnpm --filter contracts test"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
