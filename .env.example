# Server
PORT=3000
DATABASE_URL="file:./dev.db"

# Demo modes
# - X402_MOCK_MODE=true: accept base64 JSON receipts (no onchain verification)
# - X402_MOCK_MODE=false: require onchain txHash proof (ERC20 Transfer to escrow)
X402_MOCK_MODE=true
# - ESCROW_MOCK_MODE=true: do not send onchain create/deposit/release txs
# - ESCROW_MOCK_MODE=false: real IssueEscrowFactory + IssueEscrow.release(...)
ESCROW_MOCK_MODE=true

# GitHub App
GITHUB_APP_ID=
GITHUB_PRIVATE_KEY_PEM=
GITHUB_WEBHOOK_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
#
# Tip: If you store the private key in an env var, you can paste it with literal "\n"
# e.g. -----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----\n

# Signing Keys
GITPAY_AGENT_PRIVATE_KEY=
GITPAY_MAINTAINER_PRIVATE_KEY=

# Chain Config
# Set CHAIN_NAME to switch chains: base-sepolia (default), skale-base-spolia, bite-v2-sandbox-2, or skale (manual)
CHAIN_NAME=base-sepolia
CHAIN_ID=84532
RPC_URL=https://sepolia.base.org
EXPLORER_URL=https://sepolia.basescan.org
ESCROW_FACTORY_ADDRESS=

# Asset (x402 payment token)
# Prefer ASSET_*; USDC_ADDRESS is legacy/back-compat.
# Default recommendation: use USDC (decimals 6) when available on the chosen chain.
ASSET_SYMBOL=USDC
ASSET_DECIMALS=6
ASSET_ADDRESS=
USDC_ADDRESS=0x036CbD53842c5426634e7929541eC2318f3dCF7e

# Contract Deployment
DEPLOYER_PRIVATE_KEY=
GITPAY_MAINTAINER_ADDRESS=
GITPAY_AGENT_ADDRESS=
BASESCAN_API_KEY=

